{
  "name": "apydox-ui",
  "version": "0.1.0",
  "description": "The UI component library for the apydox portal",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "scripts": {
    "build": "rollup -c",
    "build-watch": "rollup -c -w",
    "test": "jest --coverage",
    "lint": "eslint ./src/**/*.ts ./src/**/*.tsx",
    "lint:fix": "npm run test:lint -- --fix",
    "coverage": "codecov",
    "storybook": "start-storybook -p 7070",
    "build-storybook": "build-storybook -c .storybook"
  },
  "author": "Andre Sutherland <andre@freshweb.io>",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "@storybook/addon-actions": "^5.2.4",
    "@storybook/addon-knobs": "^5.2.5",
    "@storybook/react": "^5.2.6",
    "@testing-library/react": "^9.4.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-router-dom": "^5.1.0",
    "@types/react-test-renderer": "^16.9.0",
    "@types/styled-components": "^4.1.19",
    "@types/styled-system": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "@zerollup/ts-transform-paths": "^1.7.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.6.1",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jest-styled-components": "^6.3.3",
    "polished": "^3.4.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "react": "^16.10.2",
    "react-docgen-typescript-loader": "^3.3.0",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.10.2",
    "rollup": "^1.25.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "storybook-addon-styled-component-theme": "^1.2.5",
    "styled-components": "^4.4.0",
    "styled-system": "^5.1.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-router-dom": "^5.1.0",
    "@types/styled-components": "^4.1.19",
    "polished": "^3.4.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "styled-components": "^4.4.0",
    "styled-system": "^5.1.2"
  },
  "optionalDependencies": {
    "@fortawesome/pro-solid-svg-icons": "^5.11.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/*.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "moduleNameMapper": {
      "@atoms(.*)$": "<rootDir>/src/components/atoms/$1",
      "@molecules(.*)$": "<rootDir>/src/components/molecules/$1",
      "@organisms(.*)$": "<rootDir>/src/components/organisms/$1",
      "@templates(.*)$": "<rootDir>/src/components/templates/$1",
      "@hooks(.*)$": "<rootDir>/src/hooks/$1",
      "@hooks$": "<rootDir>/src/hooks",
      "@ui(.*)$": "<rootDir>/src/ui/$1",
      "@utils(.*)$": "<rootDir>/src/utils/$1",
      "@typography(.*)$": "<rootDir>/src/typography/$1",
      "@test-utils(.*)$": "<rootDir>/test-utils/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist"
  ]
}
