{
  "name": "apydox",
  "version": "0.1.0",
  "description": "The web UI for the apydox api documentation portal",
  "license": "Apache-2.0",
  "dependencies": {
    "@craco/craco": "^5.0.2",
    "@types/node": "11.13.0",
    "@types/react": "16.8.12",
    "@types/react-dom": "16.8.3",
    "@types/react-redux": "^7.0.6",
    "@types/react-router-dom": "^4.3.1",
    "@types/styled-components": "^5.1.0",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.1",
    "polished": "^3.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^3.4.1",
    "react-test-renderer": "^16.13.1",
    "redux": "^4.0.1",
    "redux-api-middleware": "^3.0.1",
    "reselect": "^4.0.0",
    "styled-components": "^4.2.0",
    "swagger-editor": "^3.6.36",
    "swagger-ui-react": "^3.25.3",
    "typescript": "^3.9.2",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "PORT=5401 HTTPS=true craco start",
    "build": "craco build",
    "test": "tsc --project tsconfig.test.json && craco test --silent --coverage",
    "test:debug": "tsc --project tsconfig.test.json && craco test --coverage",
    "coverage": "codecov -F portal",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint \"src/**/*.{ts,tsx}\"",
    "fix-lint": "./node_modules/.bin/eslint \"src/**/*.{ts,tsx}\" --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.9.1",
    "@types/nock": "^10.0.1",
    "@types/react-router": "^4.4.5",
    "@types/react-test-renderer": "^16.8.1",
    "@types/redux-mock-store": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "codecov": "^3.6.1",
    "csp-html-webpack-plugin": "^3.0.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": ">=4",
    "identity-obj-proxy": "^3.0.0",
    "jest-enzyme": "^7.0.2",
    "jest-extended": "^0.11.1",
    "jest-localstorage-mock": "^2.4.0",
    "jest-styled-components": "^6.3.1",
    "lint-staged": ">=10",
    "nock": "^10.0.6",
    "prettier": "^1.17.0",
    "redux-devtools": "^3.5.0",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.3",
    "ts-jest": "^26.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --cache --fix"
  }
}
